{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,

    "types": ["node"],                 // <— only include Node typings
    "typeRoots": ["./node_modules/@types"],  // <— ignore repo-root @types
    "skipLibCheck": true               // <— avoids checking *.d.ts from deps
  },
  "include": ["src"]
}